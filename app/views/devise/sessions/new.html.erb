<div id="fullscreen_bg" class="fullscreen_bg login"/>

<div class="container">

  <%= simple_form_for resource, as: resource_name, url: session_path(resource_name), html: {class: "form-signin"} do |f| %>
    <h1 class="form-signin-heading text-muted">Sign In</h1>
    <%= f.input :email, required: true, placeholder: "Email address", class: "form-control", label: false %>
    <%= f.input :password, autocomplete: "off", class: "form-control", placeholder: "Password", required: true, label: false %>
    <%= f.input :remember_me, as: :boolean, inline_label: 'Remember me' %>
    <%= f.submit "Sign In", class: "btn btn-lg btn-primary btn-block" %>
  <% end %>

</div>

